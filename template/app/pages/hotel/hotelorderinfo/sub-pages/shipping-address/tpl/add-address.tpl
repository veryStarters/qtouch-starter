<div class="add-address-wrapper qt-font12">
  <form id="add-address-form">
  <div class="add-item qt-bb-x1">
    <div class="item-label">
      <span>姓名</span>
    </div>
    <div class="item-input">
      <input type="text" name="name" placeholder="必填"/>
    </div>
  </div>
  <div class="add-item qt-bb-x1">
    <div class="item-label">
      <span>手机号码</span>
    </div>
    <div class="item-input">
      <input type="text" name="name" placeholder="请输入手机号"/>
    </div>
  </div>
  <div class="add-item qt-bb-x1">
    <div class="item-label">
      <span>省(直辖市)</span>
    </div>
    <div class="item-input">
      <select class="province-select" name="province">
        <option value="0">请选择</option>
      </select>
    </div>
  </div>
  <div class="add-item qt-bb-x1">
    <div class="item-label">
      <span>地级市(区)</span>
    </div>
    <div class="item-input">
      <select class="city-select" name="city">
      </select>
    </div>
  </div>
  <div class="add-item qt-bb-x1">
    <div class="item-label">
      <span>区(县级市)</span>
    </div>
    <div class="item-input">
      <select class="district-select" name="district">
        <option value="">请选择</option>
      </select>
    </div>
  </div>
  <div class="add-item qt-bb-x1">
    <div class="item-label">
      <span>街道地址</span>
    </div>
    <div class="item-input">
      <input type="text" name="name" placeholder="不要重复填写省/市/区"/>
    </div>
  </div>
  <div class="add-item qt-bb-x1">
    <div class="item-label">
      <span>邮政编码</span>
    </div>
    <div class="item-input">
      <input type="text" name="name" placeholder="选填"/>
    </div>
  </div>
  </form>
  <div class="button-wrapper">
    <button class="submit-add qt-white qt-font16">确定</button>
    <button class="cancel-add qt-white qt-font16">取消</button>
  </div>
</div>
